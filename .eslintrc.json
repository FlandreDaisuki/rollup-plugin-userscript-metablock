{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true,
    "browser": true,
    "greasemonkey": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2020
  },
  "rules": {
    "array-bracket-newline": [
      "error",
      "consistent"
    ],
    "arrow-spacing": "error",
    "brace-style": [
      "error",
      "1tbs",
      {
        "allowSingleLine": true
      }
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "comma-spacing": "error",
    "indent": [
      "error",
      2
    ],
    "keyword-spacing": "error",
    "no-multi-spaces": "error",
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": "error",
    "space-infix-ops": "error",
    "no-console": "off",
    "key-spacing": "error"
  }
}
